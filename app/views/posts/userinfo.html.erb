
<%= render 'root/toplist', root: @root %>

<h1>User info</h1>
<!-- form_for部分 -->
<%= form_for(@post) do |f| %>

  <h4>name</h4>
  <%= f.text_field :title %>

  <h4>image</h4>
  <%= f.attachment_field :image%>

  <h4>introduction</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Update User' %>

<% end %>

